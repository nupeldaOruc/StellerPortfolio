@model List<Steller.Models.TblContat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   int  count = 0;
}

<h2>İletişim Bilgisi </h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Telefon</th>
        <th>Email</th>
        <th>Adres</th>
        <th>Harita Url</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
       {
        count++;
<tr>
    <th>@count</th>
    <td>@item.Phone</td>
    <td>@item.Email</td>
    <td>@item.Adress</td>
    <td><a href="@item.MapUrl" target="_blank">Harita Linki</a>  </td>
    <td><a href="/Contat/DeleteContat/@item.ContacId" class="btn btn-outline-danger">Sil</a></td>
    <td><a href="/Contat/UpdateContat/@item.ContacId" class="btn btn-outline-info">Güncelle</a></td>
</tr>
    }




</table>

<br />

<a href="/Contat/AddContat" class="btn btn-outline-primary">Yeni Öne Çıkan Alanı</a>